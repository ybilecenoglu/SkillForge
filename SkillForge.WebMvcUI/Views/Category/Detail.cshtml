@model CategoryViewModel
@{
ViewBag.Title = "Kategori Detayları";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <!-- <div class="card-header">
    <h3 class="card-title">@ViewBag.Title</h3>
    </div> -->
            <div class="card-body">
                <input type="hidden" asp-for="@Model.Category.category_id" class="form-control" />
                <div class="form-group">
                    <label>Kategori Adı</label>
                    <input asp-for="@Model.Category.category_name" class="form-control" disabled />
                </div>
                <div>
                    <label>Açıklama</label>
                    <input asp-for="@Model.Category.description" class="form-control" disabled />
                </div>
                <div>
                    <label>Kategori Resmi: </label><br />
                    @if(Model.Category.picture != null)
                    {
                    <img src="@Model.Category.picture" style="max-width:200px" class="img-fluid img-thumbnail" />
                    }
                    else{
                    <img src="/adminlte/dist/img/default-150x150.png" style="max-width:200px"
                        class="img-fluid img-thumbnail" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>